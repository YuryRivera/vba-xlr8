{
  "name": "vba-xlr8",
  "displayName": "vba-xlr8",
  "description": "Edit excel macros and compile excel workbooks from VS code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vba"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vba-xlr8.vbaRun",
        "title": "Run Excel VBA",
        "icon": "$(play)"
      },
      {
        "command": "vba-xlr8.pauseRun",
        "title": "Stop Excel VBA",
        "icon": "$(debug-stop)"
      },
      {
        "command": "vba-xlr8.compile",
        "title": "Compile Excel",
        "icon": "$(code)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vba-xlr8.vbaRun",
          "group": "navigation",
          "when": "editorLangId == vba && !vbaxrl8run"
        },
        {
          "command": "vba-xlr8.compile",
          "group": "navigation",
          "when": "editorLangId == vba && !vbaxrl8run"
        },
        {
          "command": "vba-xlr8.pauseRun",
          "group": "navigation",
          "when": "editorLangId == vba && vbaxrl8run"
        }
      ]
    },
    "languages": [
      {
        "id": "vba",
        "aliases": [
          "VBA"
        ],
        "extensions": [
          ".bas",
          ".cls",
          ".vba"
        ],
        "configuration": "./lang-config.json",
        "icon": {
          "dark": "./assets/images/vba.svg",
          "light": "./assets/images/vba.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "vba",
        "scopeName": "source.vba",
        "path": "./syntaxes/vba.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.2"
  }
}
